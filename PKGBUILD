# PKGBUILD generated by pacpan
pkgname=perl-catalyst-component-accept_context
_realname=Catalyst-Component-ACCEPT_CONTEXT
pkgver=0.07
pkgrel=1
pkgdesc="'Make the current Catalyst'"
arch=(i686 x86_64)
license=('perl')
url="http://search.cpan.org/~bobtfish/Catalyst-Component-ACCEPT_CONTEXT"
options=(!emptydirs)

depends=('perl' 'perl-catalyst-runtime' 'perl-mro-compat')
makedepends=('perl-devel-cycle' 'perl')

#provides=('Catalyst-Component-ACCEPT_CONTEXT')
provides=('catalyst-component-accept_context=0.07' 'Catalyst::Component::ACCEPT_CONTEXT=0.07' 'perl-catalyst-component-accept_context=0.07')

source=(http://search.cpan.org/CPAN/authors/id/B/BO/BOBTFISH/Catalyst-Component-ACCEPT_CONTEXT-0.07.tar.gz)
md5sums=('2c1036f67b40596741a4a5ffffd487ac')

build() {
  _expected_dir="${srcdir}/${_realname}-${pkgver}"
  if [ -d "$_expected_dir" ]; then
    cd "$_expected_dir"
  else
    _expected_dir="${srcdir}/$(bsdtar -t -f $(basename $source) | head -n1)"
    if [ -d "$_expected_dir" ]; then
      cd "$_expected_dir"
    else
      _makefile=$(find $srcdir -iname Makefile.PL)
      if [ ! -z "$_makefile" ]; then
        _expected_dir=$(dirname $_makefile)
        if [ -d "$_expected_dir" ]; then
          cd "$_expected_dir"
        else
          echo "[1;31mERROR[0m unable to detect source directory"
          echo "[1;34m-->[0m this is often due to CPAN's lack of standard naming conventions"
          echo "[1;34m-->[0m it may be possible to fix this by adjusting the build function in the PKGBUILD"
        fi
      fi
    fi
  fi
  # install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make  || return 1
  make install DESTDIR=${pkgdir} || return 1

  # remove perllocal.pod and .packlist
  find ${pkgdir} -name perllocal.pod -delete
  find ${pkgdir} -name .packlist -delete
}

